<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_Item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="140dp"
        android:hint="Enter the item you want to search for here" />

    <EditText
        android:id="@+id/edit_zipcode"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_Item"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:hint="ZipCode"
        />

    <TextView
        android:id="@+id/textView_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_Item"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/spinner_radius"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="@string/radius"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/spinner_radius"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_Item"
        android:layout_marginLeft="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:entries="@array/radius"
        />

    <Button
        android:id="@+id/button_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Go!"
        />

    <ImageView
        android:id="@+id/imageView_tang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/tang_1_fore" />

    <TextView
        android:id="@+id/tang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/imageView_tang1"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textSize="36sp"
        tools:text="@string/title"
        android:textStyle="bold|italic"
        />

</RelativeLayout>